        </section>

        <section class="rts-player-static baseball volleyball">
            <div class="container">
                <div class="section-inner">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="left-side-content">
                                <div class="content-area">
                                    <div class="stat-table">
                                        <div class="table-area">
                                            <div style="display: flex; width: 100%;justify-content: space-between;">
                                                <h3 class="@blsClass" style="flex: 1; cursor: pointer;" @onclick="ShowStandingsBLS">Pierwsza Liga BLS</h3>
                                                <h3 class="@blskClass" style="flex:1; cursor: pointer;" @onclick="ShowStandingsBLSK">Pierwsza Liga BLSK</h3>
                                            </div>
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr class="head-tr">
                                                        <th scope="col">LP</th>
                                                        <th scope="col">DRUŻYNA</th>
                                                        <th scope="col">PUNKTY</th>
                                                        <th scope="col">W</th>
                                                        <th scope="col">P</th>
                                                        <th scope="col">SW</th>
                                                        <th scope="col">SP</th>
                                                    </tr>
                                                </thead>
