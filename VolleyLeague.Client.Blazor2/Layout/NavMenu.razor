                        <NavLink class="nav-link" href="/" @onclick="Logout">Wyloguj</NavLink>
                            </li>
                        </Authorized>
                    </AuthorizeView>
               </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
